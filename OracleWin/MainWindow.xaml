<Window x:Class="Zyrenth.OracleHack.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
		x:Name="window"
        Title="Oracle of Secrets" Height="305" Width="306" Icon="/OracleWin;component/Farore.ico">

	<DockPanel>
		<Menu x:Name="mnuMain" DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem x:Name="miFileNew" Header="_New" Click="miFileNew_Click">
					<MenuItem.Icon>
						<Image Source="Images/filenew.png"  />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem x:Name="miFileOpen" Header="_Open" Click="miFileOpen_Click" >
					<MenuItem.Icon>
						<Image Source="Images/fileopen.png"  />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem x:Name="miFileSave" Header="_Save" Click="miFileSave_Click" >
					<MenuItem.Icon>
						<Image Source="Images/filesave.png"  />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem x:Name="miFileSaveAs" Header="Save _As" Click="miFileSaveAs_Click" >
					<MenuItem.Icon>
						<Image Source="Images/filesaveas.png"  />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem x:Name="miFileClose" Header="_Close" Click="miFileClose_Click" >
					<MenuItem.Icon>
						<Image Source="Images/exit.png" />
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
			<MenuItem x:Name="miHelp" Header="_Help">
				<MenuItem x:Name="miHelpAbout" Header="_About" Click="miHelpAbout_Click">

				</MenuItem>
			</MenuItem>
		</Menu>
		<Grid DataContext="{Binding Path=GameInfo, ElementName=window}" >
			<GroupBox Header="Secret For..." Height="79" HorizontalAlignment="Left" Margin="27,12,0,0" Name="groupBox1" VerticalAlignment="Top" Width="111">
				<Grid>
					<Image Height="20" HorizontalAlignment="Left" Margin="6,6,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="20" Source="/OracleWin;component/Images/Nayru.gif" />
					<Image Height="20" HorizontalAlignment="Left" Margin="6,32,0,0" Name="image2" Source="/OracleWin;component/Images/Din.gif" Stretch="Fill" VerticalAlignment="Top" Width="20" />
					<RadioButton Content="Ages" Height="16" HorizontalAlignment="Left" Margin="32,8,0,0" Name="radioButton1" VerticalAlignment="Top" />
					<RadioButton Content="Seasons" Height="16" HorizontalAlignment="Left" Margin="32,34,0,0" Name="radioButton2" VerticalAlignment="Top" />
				</Grid>
			</GroupBox>
			<GroupBox Header="Game Type" Height="79" HorizontalAlignment="Left" Margin="144,12,0,0" Name="groupBox2" VerticalAlignment="Top" Width="111">
				<Grid>
					<RadioButton Content="Linked Quest" Height="16" HorizontalAlignment="Left" Margin="6,8,0,0" Name="radioButton3" VerticalAlignment="Top" />
					<RadioButton Content="Hero's Quest" Height="16" HorizontalAlignment="Left" Margin="6,34,0,0" Name="radioButton4" VerticalAlignment="Top" />
				</Grid>
			</GroupBox>
			<TextBox Text="{Binding Hero}" Height="23" HorizontalAlignment="Left" Margin="56,111,0,0" Name="textBox1" VerticalAlignment="Top" Width="68" MaxLength="5" />
			<xceed:ShortUpDown Text="{Binding GameID}" Height="23" HorizontalAlignment="Left" Margin="56,140,0,0" Name="textBox2" VerticalAlignment="Top" Width="68" Minimum="0" />
			<TextBox Text="{Binding Child}" Height="23" HorizontalAlignment="Left" Margin="192,111,0,0" Name="textBox3" VerticalAlignment="Top" Width="68" MaxLength="5" />
			<ComboBox Height="23" HorizontalAlignment="Left" Margin="56,169,0,0" Name="comboBox1" VerticalAlignment="Top" Width="68" />
			<ComboBox Height="23" HorizontalAlignment="Left" Margin="192,140,0,0" Name="comboBox2" VerticalAlignment="Top" Width="68" />
			<TextBlock HorizontalAlignment="Left" Margin="16,114,0,0" Name="textBlock1" Text="Hero" VerticalAlignment="Top" />
			<TextBlock HorizontalAlignment="Left" Margin="16,144,0,0" Name="textBlock2" Text="ID" VerticalAlignment="Top" />
			<TextBlock HorizontalAlignment="Left" Margin="16,172,0,0" Name="textBlock3" Text="Friend" VerticalAlignment="Top" />
			<TextBlock HorizontalAlignment="Left" Margin="140,114,0,0" Name="textBlock4" Text="Child" VerticalAlignment="Top" />
			<TextBlock HorizontalAlignment="Left" Margin="140,144,0,0" Name="textBlock5" Text="Behavior" VerticalAlignment="Top" />
			<Button x:Name="btnRings" Content="Rings" HorizontalAlignment="Left" Margin="166,221,0,0" VerticalAlignment="Top" Width="75" Click="btnRings_Click"/>
			<Button x:Name="btnDecodeSecrets" Content="Decode Secrets" HorizontalAlignment="Left" Margin="27,221,0,0" VerticalAlignment="Top" Width="104" Click="btnDecodeSecrets_Click"/>


		</Grid>
	</DockPanel>
</Window>
